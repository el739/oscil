# Auto detect text files and perform LF normalization
* text=auto

# Source code files - force LF
*.c text eol=lf
*.h text eol=lf
*.s text eol=lf
*.S text eol=lf
*.cpp text eol=lf
*.hpp text eol=lf
*.ld text eol=lf

# Config/project files
*.ioc text eol=lf
*.xml text eol=lf
*.project text eol=lf
*.cproject text eol=lf
*.launch text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Makefiles
Makefile text eol=lf
*.mk text eol=lf

# Binary files - don't touch
*.bin binary
*.hex binary
*.elf binary
*.o binary
*.a binary
*.lib binary
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.pdf binary
